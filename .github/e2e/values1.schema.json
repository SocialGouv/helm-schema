{
  "type": "object",
  "$schema": "http://json-schema.org/draft-07/schema",
  "required": [
    "replicaCount",
    "resources",
    "autoscaling",
    "tolerations"
  ],
  "properties": {
    "replicaCount": {
      "type": [
        "number"
      ],
      "title": "- number of replicas in the pgweb deployment",
      "default": "1"
    },
    "enabled": {
      "type": "string"
    },
    "namespace": {
      "type": "string"
    },
    "repositoryName": {
      "type": "string"
    },
    "host": {
      "type": "string"
    },
    "targetPort": {
      "type": "string",
      "default": "8081"
    },
    "servicePort": {
      "type": "string",
      "default": "8081"
    },
    "certSecretName": {
      "type": "string"
    },
    "env": {
      "type": "string"
    },
    "envFrom": {
      "type": "string"
    },
    "ingress": {
      "type": "object",
      "required": [],
      "properties": {
        "enabled": {
          "type": "string",
          "default": "false"
        },
        "annotations": {
          "type": "string"
        }
      }
    },
    "image": {
      "type": "object",
      "required": [],
      "properties": {
        "repository": {
          "type": "string",
          "default": "sosedoff/pgweb"
        },
        "pullPolicy": {
          "type": "string",
          "default": "IfNotPresent"
        },
        "tag": {
          "type": "string",
          "default": "\"0.14.1\""
        }
      }
    },
    "imagePullSecrets": {
      "type": "string"
    },
    "nameOverride": {
      "type": "string"
    },
    "fullnameOverride": {
      "type": "string"
    },
    "serviceAccount": {
      "type": "object",
      "required": [
        "create",
        "annotations",
        "name"
      ],
      "properties": {
        "create": {
          "type": [
            "boolean"
          ],
          "title": "-- Specifies whether a service account should be created",
          "default": "false"
        },
        "annotations": {
          "type": [],
          "description": "Annotations to add to the service account"
        },
        "name": {
          "type": [],
          "description": "The name of the service account to use.\nIf not set and create is true, a name is generated using the fullname template"
        }
      }
    },
    "podAnnotations": {
      "type": "string"
    },
    "podSecurityContext": {
      "type": "string"
    },
    "securityContext": {
      "type": "string"
    },
    "resources": {
      "type": [],
      "description": "custom resources"
    },
    "autoscaling": {
      "type": "object",
      "description": "Horizontal Pod autoscaler",
      "required": [
        "enabled"
      ],
      "properties": {
        "enabled": {
          "type": [],
          "description": "Horizontal Pod autoscaler",
          "default": "false"
        },
        "minReplicas": {
          "type": "string",
          "default": "1"
        },
        "maxReplicas": {
          "type": "string",
          "default": "100"
        },
        "targetCPUUtilizationPercentage": {
          "type": "string",
          "default": "80"
        }
      }
    },
    "nodeSelector": {
      "type": "string"
    },
    "tolerations": {
      "type": "array",
      "items": {
        "$ref": "https://raw.githubusercontent.com/yannh/kubernetes-json-schema/master/v1.24.0/_definitions.json#/definitions/io.k8s.api.core.v1.Toleration"
      }
    },
    "affinity": {
      "type": "string"
    },
    "extraArgs": {
      "type": "string"
    }
  }
}
